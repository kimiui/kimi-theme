{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "./lib",
    "composite": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    

    "paths": {
      "lib/*": ["./lib/*"]
    }
  },
  "include": ["lib"],
  "exclude": ["node_modules"]
}